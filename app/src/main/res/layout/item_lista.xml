<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- Imagen de la mascota -->
        <ImageView
            android:id="@+id/imagenMascota"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/perro_default"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:outlineProvider="background" />

        <!-- Turno -->
        <TextView
            android:id="@+id/turnoMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="#123"
            android:textStyle="bold"
            android:textColor="#EE575F"
            android:textSize="14sp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/nombreMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imagenMascota"
            android:layout_marginStart="12dp"
            android:text="Firulais"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#4d4d4d" />

        <!-- SÃ­ntoma -->
        <TextView
            android:id="@+id/sintomaMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreMascota"
            android:layout_toEndOf="@id/imagenMascota"
            android:layout_marginStart="12dp"
            android:text="Fiebre alta"
            android:textSize="14sp"
            android:textColor="#666666" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>